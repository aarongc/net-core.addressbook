<!-- Modal -->
<div class="modal fade" id="modal-ModalCenter" tabindex="-1" role="dialog" aria-labelledby="modal-ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="modal-ModalLongTitle">Validation</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
          <p class="d-none" id="error">You have entered an invalid data, please check the details before saving the information.</p>
          <p class="d-none" id="exist">Address already exist.</p>
          <p class="d-none" id="success">Addresses has been successfully added.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>